{
  "compilerOptions": {
    "strict": true,
    "noEmit": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "ESNext",
    "declaration": true,
    "isolatedModules": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "types/**/*.d.ts",
    "index.ts",
    "function/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
